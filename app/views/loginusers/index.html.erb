<p id="notice"><%= notice %></p>
<style type="text/css">
    body {
      background-image: url(<%= asset_path 'CorkBoard02.jpg' %>);
    }
</style>

<h1 style="font-size:1.8em;">ログインユーザー</h1>

<table>
  <thead>
    <tr>
      <th>ユーザーネーム</th>
      <th>パスワード</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loginusers.each do |loginuser| %>
      <tr>
        <td><%= loginuser.username %></td>
        <td><%= loginuser.password %></td>
        <td><%= link_to '詳細', loginuser %></td>
        <td><%= link_to '編集', edit_loginuser_path(loginuser) %></td>
        <td><%= link_to '削除', loginuser, method: :delete, data: { confirm: '本当にいいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "新規登録" , new_loginuser_path , class: "btn btn-large btn-warning"%>
<%= link_to "戻る" , menu_index_path, class: "btn btn-large btn-primary" %>
