<p id="notice"><%= notice %></p>

<h1>ログインユーザー</h1>

<table>
  <thead>
    <tr>
      <th>パスワード</th>
      <th>ユーザネーム</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loginusers.each do |loginuser| %>
      <tr>
        <td><%= loginuser.password %></td>
        <td><%= loginuser.username %></td>
        <td><%= link_to 'Show', loginuser %></td>
        <td><%= link_to 'Edit', edit_loginuser_path(loginuser) %></td>
        <td><%= link_to 'Destroy', loginuser, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= form_tag action: :auth do %>
    <div class="field">
        <%= label_tag :password, 'パスワード' %>:<br />
        <%= text_field_tag :password, '' %>
    </div>
    <div class="field">
        <%= label_tag :username, 'ユーザーネーム' %>:<br />
        <%= text_field_tag :username, '' %>
    </div>
    <%= hidden_field_tag :referer, flash[:referer] %>
    <%= submit_tag 'ログイン' %>
<% end %>

<%= link_to 'ログイン登録', new_loginuser_path %>
