<p id="notice"><%= notice %></p>

<h1>カテゴリ一覧</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>収入/支出</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.categoryname %></td>
        <td><%= category.hanbetsu %></td>
        <td><%= link_to '編集', edit_category_path(category) %></td>
        <td><%= link_to '削除', category, method: :delete, data: { confirm: '本当にいいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

