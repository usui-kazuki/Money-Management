<h1>Login#index</h1>

<p>Find me in app/views/login/index.html.erb</p>

<%= form_tag action: :auth do %>
    <div class="field">
        <%= label_tag :userid, 'ユーザネーム' %>:<br />
        <%= text_field_tag :username, '' %>
    </div>
    <div class="field">
        <%= label_tag :password, 'パスワード' %>:<br />
        <%= text_field_tag :password, '' %>
    </div>
    <%# ログイン後にリダイレクトすべきアクションを隠しフィールドにセット %>
    <%= hidden_field_tag :referer, flash[:referer] %>
    <%= submit_tag 'ログイン' %>
<% end %>
<%= link_to 'ユーザー登録' , loginusers_path %>