<p id="notice"><%= notice %></p>

<h1>お知らせ一覧</h1>

<table>
  <thead>
    <tr>
      <th>日付</th>
      <th>タイトル</th>
      <th>メモ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notices.each do |notice| %>
      <tr>
        <td><%= notice.date %></td>
        <td><%= notice.title %></td>
        <td><%= notice.memo %></td>
        <td><%= link_to '編集', edit_notice_path(notice) %></td>
        <td><%= link_to '削除', notice, method: :delete, data: {  confirm:'本当にいいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_notice_path %>
