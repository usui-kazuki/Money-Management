<script type="text/javascript">
   $(document).ready(function() {
    	$('#calendar').fullCalendar({
       		events:window.hoge_datas
    	})
	});
</script>

<%= javascript_tag do %>
   window.hoge_datas = <%= raw @datas.to_json %>;
 <% end %>

<div id="calendar"></div>

<table>
<h1>収入履歴</h1>
<thead>
    <tr>
      <th>日付</th>
      <th>金額</th>
      <th>カテゴリ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @incomehistories.each do |price| %>
        	<%= link_to(price) do %>
       　<tr> 
 				<td><%= price.date %></td>
 				<td>￥<%= price.price %></td>
 				<td><%= price.category.try(:categoryname) %></td>
      	</tr>
        	<% end %>
    <% end %>
  </tbody>
</table>

