<p id="notice"><%= notice %></p>

<h1>目標一覧</h1>

<table>
  <thead>
    <tr>
      <th>日付</th>
      <th>目標金額</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.date %></td>
        <td><%= goal.goalmoney %></td>
        <td><%= link_to '詳細', goal %></td>
        <td><%= link_to '編集', edit_goal_path(goal) %></td>
        <td><%= link_to '削除', goal, method: :delete, data: { confirm: '本当にいいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

