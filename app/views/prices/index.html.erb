<p id="notice"><%= notice %></p>

<h1>プライス一覧</h1>

<table>
  <thead>
    <tr>
      <th>日付</th>
      <th>金額</th>
      <th>メモ</th>
      <th>ファミリー</th>
      <th>支払方法</th>
      <th>収入/収支</th>
      <th>カテゴリー</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td><%= price.date %></td>
        <td><%= price.price %></td>
        <td><%= price.memo %></td>
        <td><%= price.familyuser.try(:name) %></td>
        <td><%= price.payment %></td>
        <td><%= price.hanbetsu %></td>
        <td><%= price.category.try(:categoryname) %></td>
        <td><%= link_to '詳細', price %></td>
        <td><%= link_to '編集', edit_price_path(price) %></td>
        <td><%= link_to '削除', price, method: :delete, data: { confirm: '本当にいいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


