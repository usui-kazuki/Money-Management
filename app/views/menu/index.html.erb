<html>
<head>
<h1>マネ×マネ</h1>
</head>

<body>
  <table>
    <h3><%= "#{@month.year} 年 #{@month.month} 月 "%></h3>

    <ul>収入金額　　　　￥<%= @usemoney %></ul>
    <ul>支出金額　　　　￥<%= @usedmoney %></ul>
    <ul>残金　　　　　　￥<%= @usemoney - @usedmoney %></ul>
    <ul>目標使用金額　　￥<%= @tgoal %></ul>
    <ul>目標使用残金　　￥<%= @tgoal - @usedmoney %></ul>
  </table>
 
  <table>
    <%= link_to sanitize('<i class="icon-trash icon-white"></i> ') + '収入追加', new_price_path(hanbetsu: "収入"), class: "btn btn-primary btn-lg" %>　
    <%= link_to "支出追加", new_price_path(hanbetsu: "支出"), class: "btn btn-primary btn-lg" %>
  </table>

</body>

<table>
  <thead> 
      <tr>
      <th>日付</th>
      <th>タイトル</th>
      <th>メモ</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <% @notices.each do |notice| %>
      <tr>
        <% if Date.today + 7.days >= notice.date %>
          <td><%= notice.date %></td>
          <td><%= notice.title %></td>
          <td><%= notice.memo %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


